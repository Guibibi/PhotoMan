@page
@model PhotoMan.Pages.PhotoCollections.ListModel

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhotoCollection[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoCollection[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoCollection[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoCollection[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoCollection[0].Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoCollection[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PhotoCollection) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
